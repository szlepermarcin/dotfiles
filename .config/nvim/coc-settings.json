{
  "metals.javaHome": "/usr/lib/jvm/default-runtime/",
  "languageserver": {
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": [ "--lsp" ],
      "rootPatterns": [ "*.cabal", "cabal.config", "cabal.project", "package.yaml", "stack.yaml" ],
      "filetypes": [ "hs", "lhs", "haskell" ],
      "initializationOptions": { "languageServerHaskell": { "hlintOn": true, "formattingProvider": "stylish-haskell" }
      }
    }
  }
}
